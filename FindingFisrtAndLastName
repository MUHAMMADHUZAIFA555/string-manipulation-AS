// *FINDING FIRST AND LAST NAME*
// *PSEUDOCODE*
//DECLARATION
DECLARE Str1, FN, LN : STRING
DECLARE space, LENGTH : INTEGER

//INITIALISATION
Str1 ← ""
FN ← ""
LN ← ""
space ← 0
LENGTH ← 0

//INPUT
INPUT "Enter string to know first and last names: ", Str1

//PROCESS
space ← LOCATE(Str1, ' ')
LENGTH ← LEN(Str1)
FN ← LEFT(Str1, space-1)
LN ← RIGHT(Str1, LENGTH-space)

//OUTPUT
OUTPUT "First name = " + FN
OUTPUT "Last name = " + LN
